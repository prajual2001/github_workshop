<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Caller"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Phone Number:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/phoneNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g., +1234567890"
        android:inputType="phone"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edittext_background" />

    <Button
        android:id="@+id/startCallButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Auto Calling"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_start_background"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/stopCallButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Auto Calling"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_stop_background"
        android:padding="16dp"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️ Use responsibly and comply with local laws"
        android:textSize="12sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:textStyle="italic" />

</LinearLayout>