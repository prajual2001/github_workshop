<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.AutoCaller" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color_dark</item>
        <item name="colorOnSecondary">@color/text_light</item>
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/primary_text</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="android:statusBarColor">@color/primary_color_dark</item>
    </style>

    <!-- Custom EditText style -->
    <style name="CustomEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <!-- Custom Button style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>